<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ke.co.zeno.bukuapp.ui.main.MainActivity">
    <include android:id="@+id/app_bar" layout="@layout/app_bar_main"/>

    <TextView
        android:id="@+id/txtBookList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bookListTitle"
        android:layout_marginTop="5dp" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnClassList"
        android:hint="@string/classSelection"
        android:layout_marginTop="5dp" />

</LinearLayout>
