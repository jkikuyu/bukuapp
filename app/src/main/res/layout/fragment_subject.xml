<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="ke.co.zeno.bukuapp.ui.main.SubjectFragment">
    <TextView
        android:id="@+id/subjects"
        android:layout_below="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subject_list"
        android:textColor="@color/colorPrimary" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/subjectsRecycler"
        android:layout_below="@+id/subjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="4dp">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/randomList"
        android:layout_below="@+id/subjectsRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="@string/random_list"
        android:textColor="@color/colorPrimary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/randomBooksRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@+id/streams"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
