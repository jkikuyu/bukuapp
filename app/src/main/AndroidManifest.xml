<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ke.co.zeno.bukuapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:name=".BukuApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".base.BaseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.SignUp"/>
        <activity android:name=".ui.main.SignIn"/>
        <activity
            android:name=".ui.main.HomeActivity"
            android:label="@string/title_activity_home"/>
        <activity
            android:name=".ui.main.CameraActivity"
            android:label="@string/title_activity_camera"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".ui.main.BookSelectedActivity">
        </activity>
        <activity android:name="ke.co.zeno.notification_count_badge_actionbar">
        </activity>
    </application>

</manifest>